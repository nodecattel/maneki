{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifiers": true,
    "nodeModuleResolution": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
